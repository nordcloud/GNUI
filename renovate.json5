{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":separateMultipleMajorReleases",
    "schedule:monthly",
    ":automergeDisabled"
  ],
  "enabledManagers": ["npm"],
  "labels": ["dependencies"],
  "node": {
    "enabled": false
  },
  "pin": {
    "enabled": false
  },
  "prConcurrentLimit": 8,
  "rangeStrategy": "bump",
  "rebaseWhen": "conflicted",
  "reviewers": ["@nordcloud/core-frontend-reviewers"],
  "packageRules": [
    {
      "depTypeList": ["peerDependencies"],
      "enabled": false
    },
    {
      "packageNames": ["node"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["patch"],
      "excludePackagePatterns": ["@storybook", "storybook"],
      "extends": ["schedule:monthly"],
      "groupName": "Monthly patch updates"
    },
    {
      "matchPackagePatterns": ["@storybook", "storybook"],
      "extends": ["schedule:monthly"],
      "groupName": "Storybook updates"
    },
    {
      "groupName": "Styled System",
      "matchPackageNames": ["styled-system", "@types/styled-system"]
    },
    {
      "groupName": "Jest",
      "matchPackageNames": [
        "@types/jest",
        "jest",
        "jest-environment-jsdom",
        "ts-jest"
      ]
    },
    {
      "groupName": "Rollup",
      "matchPackageNames": [
        "@rollup/plugin-commonjs",
        "@rollup/plugin-node-resolve",
        "rollup",
        "rollup-plugin-peer-deps-external",
        "rollup-plugin-typescript2"
      ]
    },
    {
      "groupName": "React Helmet",
      "matchPackageNames": ["react-helmet", "@types/react-helmet"]
    },
    {
      "groupName": "Styled Components",
      "matchPackageNames": ["styled-components", "@types/styled-components"]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackagePatterns": ["eslint", "prettier"],
      "groupName": "ESLint and Prettier"
    }
  ],
  "ignoreDeps": [
    // Major effort required to upgrade to latest Stylelint, need to wait for `eslint-config-pat`
    "stylelint",
    "stylelint-config-recommended",
    "stylelint-config-styled-components",
    "stylelint-processor-styled-components",

    // manually bumping
    "node",
    "npm",
    "typescript",

    // dep updates blocked by React 18
    "@testing-library/react",
    "@testing-library/user-event",
    "@types/react",
    "@types/react-dom",
    "react",
    "react-dom"
  ]
}
