{
  "name": "@nordcloud/gnui",
  "description": "Nordcloud Design System - a collection of reusable React components used in Nordcloud's SaaS products",
  "version": "7.1.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nordcloud/GNUI.git"
  },
  "author": "Nordcloud Engineering",
  "bugs": {
    "url": "https://github.com/nordcloud/GNUI"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "build": "rollup -c",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:commit": "npm run test -- -o --silent --watchAll=false",
    "test:all": "npm run test -- --silent --watchAll=false",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "check:types": "tsc",
    "check:format": "prettier --check \"**/*.+(js|json|ts|tsx)\"",
    "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx .",
    "lint:quiet": "npm run lint -- --quiet",
    "lint:css": "stylelint '**/*.tsx'",
    "lint:css:quiet": "npm run lint:css -- --quiet",
    "validate:all": "npm-run-all --parallel check:types check:format lint:quiet lint:css:quiet test:all",
    "postinstall": "patch-package"
  },
  "engines": {
    "node": ">=16.17.0",
    "npm": ">=8.15.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --fix",
      "stylelint",
      "git add"
    ],
    "*.{md,mdx,css,yaml,yml}": [
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "styled-components": "^5.0.0"
  },
  "dependencies": {
    "@types/styled-system": "^5.1.15",
    "polished": "^4.1.4",
    "react-awesome-styled-grid": "^3.1.4",
    "react-content-loader": "^6.2.0",
    "react-day-picker": "^8.1.0",
    "react-helmet": "^6.1.0",
    "react-select": "^5.2.2",
    "styled-components-breakpoint": "^3.0.0-preview.20",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@nordcloud/eslint-config-pat": "^2.1.2",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@storybook/addon-docs": "^6.4.20",
    "@storybook/addons": "^6.4.20",
    "@storybook/react": "^6.4.20",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.3",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/node": "^14.14.37",
    "@types/react": "^16.14.23",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.1.5",
    "@types/styled-components": "^5.1.1",
    "date-fns": "^2.29.1",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^10.3.0",
    "lodash.clonedeep": "^4.5.0",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "prettier": "^2.4.1",
    "react": "^16.14.0",
    "react-copy-to-clipboard": "^5.0.2",
    "react-dom": "^16.14.0",
    "rollup": "^2.70.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.31.2",
    "storybook": "^6.4.19",
    "styled-components": "^5.0.1",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.2.2"
  }
}
