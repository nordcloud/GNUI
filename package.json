{
  "name": "@nordcloud/gnui",
  "description": "Nordcloud Design System - a collection of reusable React components used in Nordcloud's SaaS products",
  "version": "7.8.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nordcloud/GNUI.git"
  },
  "author": "Nordcloud Engineering",
  "bugs": {
    "url": "https://github.com/nordcloud/GNUI"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "storybook": "cross-env NODE_OPTIONS=--openssl-legacy-provider start-storybook -p 9009 -s public",
    "build-storybook": "cross-env NODE_OPTIONS=--openssl-legacy-provider build-storybook -s public",
    "build-storybook:legacy-node": "build-storybook -s public",
    "build": "rollup -c --bundleConfigAsCjs",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:commit": "npm run test -- -o --silent --watchAll=false",
    "test:all": "npm run test -- --silent --watchAll=false",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx|md|mdx|yml)\"",
    "check:types": "tsc --pretty",
    "check:format": "prettier --check \"**/*.+(js|json|ts|tsx|md|mdx|yml)\"",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:quiet": "npm run lint -- --quiet",
    "lint:css": "stylelint '**/*.+(ts|tsx)'",
    "lint:css:quiet": "npm run lint:css -- --quiet",
    "validate:all": "npm-run-all --parallel check:types check:format lint:quiet lint:css:quiet test:all",
    "postinstall": "patch-package"
  },
  "engines": {
    "node": "^16.18.0 || ^18.12.0",
    "npm": ">=8.19.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --fix",
      "stylelint",
      "git add"
    ],
    "*.{md,mdx,css,yaml,yml}": [
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "react": "^16.13.0 || ^17.0.0",
    "react-dom": "^16.13.0 || ^17.0.0",
    "styled-components": "^5.3.0"
  },
  "dependencies": {
    "@types/styled-system": "^5.1.15",
    "lodash.clonedeep": "^4.5.0",
    "polished": "^4.2.2",
    "react-awesome-styled-grid": "^3.1.4",
    "react-content-loader": "^6.2.0",
    "react-day-picker": "^8.1.0",
    "react-helmet": "^6.1.0",
    "react-if": "^4.1.4",
    "react-select": "^5.5.9",
    "styled-components-breakpoint": "^3.0.0-preview.20",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@nordcloud/eslint-config-pat": "^4.15.1",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@storybook/addon-docs": "^6.5.13",
    "@storybook/addons": "^6.5.13",
    "@storybook/react": "^6.5.13",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^29.2.3",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/node": "^18.11.9",
    "@types/react": "^17.0.52",
    "@types/react-dom": "^17.0.18",
    "@types/react-helmet": "^6.1.6",
    "@types/styled-components": "^5.1.26",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.3",
    "eslint": "^8.31.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-watch-typeahead": "^2.2.1",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.5.0",
    "prettier": "^2.8.0",
    "react": "^17.0.2",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^17.0.2",
    "rollup": "^3.10.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "storybook": "^6.5.12",
    "storybook-addon-turbo-build": "^1.1.0",
    "styled-components": "^5.3.6",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "overrides": {
    "minimist": "~1.2.6",
    "shell-quote": "~1.7.3",
    "terser": "~4.8.1",
    "tmpl": "~1.0.5",
    "trim": "~0.0.3",
    "y18n": "~4.0.1",
    "hosted-git-info": "~2.8.9",
    "ssri": "~6.0.2",
    "elliptic": "~6.5.4",
    "path-parse": "~1.0.7"
  }
}
